{
  "name": "@ldesign/calendar-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "@ldesign/calendar monorepo - 支持多框架的日历组件库",
  "author": "LDesign Team",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --filter=./packages/* run build",
    "dev": "pnpm -r --filter=./packages/* run dev",
    "lint": "pnpm -r --filter=./packages/* run lint",
    "lint:fix": "pnpm -r --filter=./packages/* run lint:fix",
    "type-check": "pnpm -r --filter=./packages/* run type-check",
    "test": "pnpm -r --filter=./packages/* run test",
    "test:coverage": "pnpm -r --filter=./packages/* run test:coverage",
    "clean": "pnpm -r --filter=./packages/* run clean",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "playwright": "^1.40.0",
    "typescript": "^5.7.3",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0"
  }
}
